<!doctype html>
<html lang="en" class="bg-white antialiased">
  <head>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163582638-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-163582638-1');
    </script>

    <title>{{ title or metadata.title }}</title>

    <!-- Page Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="description" content="{{ description or metadata.description }}">

    <!-- Social Media Open Graph -->
    <meta property="og:title" content="{{ title or metadata.title }}" />
    <meta property="og:url" content="{{ permalink | url }}" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="{{ description or metadata.description }}" />
    <meta property="og:image" content="{{ '/assets/screenshot.png' | url }}" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@UniformCSS" />
    <meta name="twitter:creator" content="@UniformCSS" />
    <meta property="twitter:url" content="{{ permalink | url }}" />
    <meta property="twitter:title" content="{{ title or metadata.title }}" />
    <meta property="twitter:description" content="{{ description or metadata.description }}" />
    <meta property="twitter:image" content="{{ '/assets/screenshot.png' | url }}" />

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <!-- Icons -->
    <link rel="icon" href="{{ '/assets/favicon-16x16.png' | url }}" sizes="16x16" />
    <link rel="icon" href="{{ '/assets/favicon-32x32.png' | url }}" sizes="32x32" />
    <link rel="icon" href="{{ '/assets/favicon-96x96.png' | url }}" sizes="96x96" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/apple-touch-icon.png' | url }}" />
    <link rel="manifest" href="{{ '/assets/manifest.json' | url }}" />

    <!-- Styles -->
    <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">

    <!-- Font Awesome 5 -->
    <script defer src="{{ '/assets/js/fontawesome-free-5.13.0-web/all.min.js' | url }}"></script>
  </head>
  <body class="font-sans">

    {% include "partials/notice.njk" %}

    {{ content | safe }}

    {% include "partials/footer.njk" %}


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

    <script>


      $(document).ready(function () {

        // Change pages on mobile
        $('.js-select-url').on('change', function () {
          console.log("changed");
          let url = $(this).val(); // get selected value
          if (url) { // require a URL
            window.location = url; // redirect
          }
          return false;
        });


        $('[data-viewmode-button]').click(function() {
          let parent = $(this).parent().parent();

          if ($(this).hasClass('is-active')) {
            parent.find('[data-viewmode-button]').addClass('bg-white');
            parent.find('[data-viewmode-button]').addClass('hover\.bg-black');
            parent.find('[data-viewmode-button]').addClass('hover\.color-white');
            
            parent.find('[data-viewmode-button]').removeClass('bg-black');
            parent.find('[data-viewmode-button]').removeClass('color-white');

            parent.find('[data-viewmode-button]').removeClass('is-active');
          } else {
            parent.find('[data-viewmode-button]').removeClass('bg-white');
            parent.find('[data-viewmode-button]').removeClass('hover\.bg-black');
            parent.find('[data-viewmode-button]').removeClass('hover\.color-white');

            parent.find('[data-viewmode-button]').addClass('bg-black');
            parent.find('[data-viewmode-button]').addClass('hover\.bg-black');
            parent.find('[data-viewmode-button]').addClass('color-white');

            parent.find('[data-viewmode-button]').addClass('is-active');
          }
          parent.find('[data-viewmode-code').toggle();
        });

        $('[data-tab-target]').click(function() {
          let family = $(this).data('tab-family');
          let target = $(this).data('tab-target');

          $('[data-tab-family="' + family + '"][data-tab-target]').removeClass('bg-gray-900 opacity-30');
          $('[data-tab-family="' + family + '"][data-tab-target]').addClass('opacity-30');
          
          $(this).removeClass('opacity-30');
          $(this).addClass('bg-gray-900');
          
          $('[data-tab-family="' + family + '"][data-tab-id]').hide();
          $('[data-tab-family="' + family + '"][data-tab-id="' + target + '"]').show();

        });


        $('.js-btn-reveal-colors').click(function() {
          $(this).parent().hide();
          $('.js-colors').fadeIn();
        });

        $('.js-btn-reveal-sizes').click(function() {
          $(this).parent().hide();
          $('.js-sizes').fadeIn();
        });


      });
    </script>
  </body>
</html>